{
  "title": "BoaRecipeV1",
  "type": "object",
  "properties": {
    "context": {
      "title": "Context",
      "description": "The recipe context.",
      "type": "object"
    },
    "package": {
      "title": "Package",
      "description": "The package name and version.",
      "allOf": [
        {
          "$ref": "#/definitions/Package"
        }
      ]
    },
    "source": {
      "title": "Source",
      "description": "The source items to be downloaded and used for the build.",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/UrlSource"
          },
          {
            "$ref": "#/definitions/GitSource"
          },
          {
            "$ref": "#/definitions/HgSource"
          },
          {
            "$ref": "#/definitions/SvnSource"
          },
          {
            "$ref": "#/definitions/LocalSource"
          }
        ]
      }
    },
    "build": {
      "$ref": "#/definitions/Build"
    },
    "features": {
      "title": "Features",
      "type": "array",
      "items": {}
    },
    "steps": {
      "title": "Steps",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Output"
      }
    },
    "about": {
      "$ref": "#/definitions/About"
    },
    "extra": {
      "title": "Extra",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "Package": {
      "title": "Package",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "description": "The package name",
          "type": "string"
        },
        "version": {
          "title": "Version",
          "description": "The package version",
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ],
      "additionalProperties": false
    },
    "UrlSource": {
      "title": "UrlSource",
      "type": "object",
      "properties": {
        "patches": {
          "title": "Patches",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "destination": {
          "title": "Destination",
          "type": "string"
        },
        "url": {
          "title": "Url",
          "type": "string"
        },
        "sha256": {
          "title": "Sha256",
          "minLength": 64,
          "maxLength": 64,
          "pattern": "^[0-9a-fA-F]{64}$",
          "type": "string"
        },
        "md5": {
          "title": "Md5",
          "minLength": 32,
          "maxLength": 32,
          "pattern": "^[0-9a-fA-F]{32}$",
          "type": "string"
        },
        "sha1": {
          "title": "Sha1",
          "minLength": 40,
          "maxLength": 40,
          "pattern": "^[0-9a-fA-F]{40}$",
          "type": "string"
        },
        "fn": {
          "title": "Fn",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "GitSource": {
      "title": "GitSource",
      "type": "object",
      "properties": {
        "patches": {
          "title": "Patches",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "destination": {
          "title": "Destination",
          "type": "string"
        },
        "git_rev": {
          "title": "Git Rev",
          "default": "HEAD",
          "type": "string"
        },
        "git_url": {
          "title": "Git Url",
          "type": "string"
        },
        "git_depth": {
          "title": "Git Depth",
          "default": -1,
          "type": "integer"
        }
      },
      "required": [
        "git_url"
      ],
      "additionalProperties": false
    },
    "HgSource": {
      "title": "HgSource",
      "type": "object",
      "properties": {
        "patches": {
          "title": "Patches",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "destination": {
          "title": "Destination",
          "type": "string"
        },
        "hg_url": {
          "title": "Hg Url",
          "type": "string"
        },
        "hg_tag": {
          "title": "Hg Tag",
          "default": "tip",
          "type": "string"
        }
      },
      "required": [
        "hg_url"
      ],
      "additionalProperties": false
    },
    "SvnSource": {
      "title": "SvnSource",
      "type": "object",
      "properties": {
        "patches": {
          "title": "Patches",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "destination": {
          "title": "Destination",
          "type": "string"
        },
        "svn_url": {
          "title": "Svn Url",
          "type": "string"
        },
        "svn_rev": {
          "title": "Svn Rev",
          "default": "head",
          "type": "string"
        },
        "svn_ignore_externals": {
          "title": "Svn Ignore Externals",
          "default": false,
          "type": "boolean"
        }
      },
      "required": [
        "svn_url"
      ],
      "additionalProperties": false
    },
    "LocalSource": {
      "title": "LocalSource",
      "type": "object",
      "properties": {
        "patches": {
          "title": "Patches",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "destination": {
          "title": "Destination",
          "type": "string"
        },
        "path": {
          "title": "Path",
          "type": "string"
        }
      },
      "required": [
        "path"
      ],
      "additionalProperties": false
    },
    "NoarchType": {
      "title": "NoarchType",
      "description": "An enumeration.",
      "enum": [
        "generic",
        "python"
      ]
    },
    "Build": {
      "title": "Build",
      "type": "object",
      "properties": {
        "number": {
          "title": "Number",
          "description": "Build number to version current build in addition to package version",
          "default": 0,
          "minimum": 0,
          "type": "integer"
        },
        "string": {
          "title": "String",
          "description": "Build string to identify build variant (if not explicitly set, computed automatically from used build variant)",
          "type": "string"
        },
        "skip": {
          "title": "Skip",
          "description": "List of conditions under which to skip the build of the package.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "script": {
          "title": "Script",
          "description": "Build script to be used. If not given, tries to find 'build.sh' on Unix or 'bld.bat' on Windows inside the recipe folder.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "noarch": {
          "description": "Can be either 'generic' or 'python'. A noarch 'python' package compiles .pyc files upon installation.",
          "allOf": [
            {
              "$ref": "#/definitions/NoarchType"
            }
          ]
        },
        "entry_points": {
          "title": "Entry Points",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "run_exports": {
          "title": "Run Exports",
          "type": "object"
        },
        "ignore_run_exports": {
          "title": "Ignore Run Exports",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ignore_run_exports_from": {
          "title": "Ignore Run Exports From",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "track_features": {
          "title": "Track Features",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "include_recipe": {
          "title": "Include Recipe",
          "description": "Include recipe in final package.",
          "default": true,
          "type": "boolean"
        },
        "pre-link": {
          "title": "Pre-Link",
          "description": "Script to execute when installing - before linking. Highly discouraged!",
          "type": "string"
        },
        "post-link": {
          "title": "Post-Link",
          "description": "Script to execute when installing - after linking.",
          "type": "string"
        },
        "pre-unlink": {
          "title": "Pre-Unlink",
          "description": "Script to execute when removing - before unlinking.",
          "type": "string"
        },
        "osx_is_app": {
          "title": "Osx Is App",
          "default": false,
          "type": "boolean"
        },
        "disable_pip": {
          "title": "Disable Pip",
          "default": false,
          "type": "boolean"
        },
        "preserve_egg_dir": {
          "title": "Preserve Egg Dir",
          "default": false,
          "type": "boolean"
        },
        "no_link": {
          "title": "No Link",
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[^\\\\]+$"
          }
        },
        "binary_relocation": {
          "title": "Binary Relocation",
          "default": true,
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[^\\\\]+$"
              }
            }
          ]
        },
        "has_prefix_files": {
          "title": "Has Prefix Files",
          "default": [],
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[^\\\\]+$"
          }
        },
        "binary_has_prefix_files": {
          "title": "Binary Has Prefix Files",
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[^\\\\]+$"
          }
        },
        "ignore_prefix_files": {
          "title": "Ignore Prefix Files",
          "default": false,
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[^\\\\]+$"
              }
            }
          ]
        },
        "detect_binary_files_with_prefix": {
          "title": "Detect Binary Files With Prefix",
          "type": "boolean"
        },
        "skip_compile_pyc": {
          "title": "Skip Compile Pyc",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rpaths": {
          "title": "Rpaths",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rpaths_patcher": {
          "title": "Rpaths Patcher",
          "type": "string"
        },
        "script_env": {
          "title": "Script Env",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "always_include_files": {
          "title": "Always Include Files",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "msvc_compiler": {
          "title": "Msvc Compiler",
          "type": "string"
        },
        "force_use_keys": {
          "title": "Force Use Keys",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "force_ignore_keys": {
          "title": "Force Ignore Keys",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "merge_build_host": {
          "title": "Merge Build Host",
          "default": false,
          "type": "boolean"
        },
        "missing_dso_whitelist": {
          "title": "Missing Dso Whitelist",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "error_overdepending": {
          "title": "Error Overdepending",
          "description": "Error on overdepending",
          "default": false,
          "type": "boolean"
        },
        "error_overlinking": {
          "title": "Error Overlinking",
          "description": "Error on overlinking",
          "default": false,
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "Requirements": {
      "title": "Requirements",
      "type": "object",
      "properties": {
        "build": {
